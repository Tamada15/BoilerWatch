<controls:MetroWindow  x:Class="WpfApp1.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:views ="clr-namespace:WpfApp1"
        xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Height="Auto" Width="Auto"
        d:DesignHeight="1080" d:DesignWidth="1920"
        WindowStyle="None"
        ShowTitleBar="False"
        ShowCloseButton="False"
        ShowMinButton="False"
        ShowMaxRestoreButton="False"
        Background="#1F2427"
        BorderBrush="Transparent"
         WindowState="Maximized"
        >
    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Top" Height="30" Background="#1F2427">
                <Grid>
                    <Grid HorizontalAlignment="Right" VerticalAlignment="Stretch" >
                          <Button  
                              Click="CloseClick" Style="{StaticResource WindowCommand}" Width="40">
                             <iconPacks:PackIconPhosphorIcons Kind="XLight" Width="13" Height="13" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"  />
                        </Button>
                    </Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Stretch" Orientation="Horizontal">
                        <iconPacks:PackIconFontAwesome Style="{StaticResource Title_Icon}"/>
                        <TextBlock Margin="5,0,0,0" Style="{StaticResource Title_Text}"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="208"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1" Background="#11181B" CornerRadius="15,0,0,0" BorderBrush="#60676C"  BorderThickness="0.5" >
                </Border>
                <ContentControl Grid.Column="1" Content="{Binding CurrentPageViewModel}" Margin="5"/>
                <Border Grid.Column="0" Background="#1F2427" UseLayoutRounding="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical"  Grid.Row="1" >
                            <Button Command="{Binding ShowDashboardCommand}"  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource NavButtonStyle}" Tag="{x:Type local:MainViewModel}" >
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <iconPacks:PackIconFontAwesome Kind="HouseChimneyUserSolid"  Style="{StaticResource IconStyle}"  />
                                    <TextBlock Text="Главная" Style="{StaticResource TextStyle}"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding ShowEventsCommand}"  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Style="{StaticResource NavButtonStyle_2}" Tag="{x:Type local:EventsViewModel}" >
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0"  >
                                    <iconPacks:PackIconFontAwesome Kind="CalendarDaySolid" Style="{StaticResource IconStyle_2}"/>
                                    <TextBlock Text="События" Style="{StaticResource TextStyle_2}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Margin="0,0,0,30">
                            <TextBlock Text="Версия" Foreground="#60676C" FontWeight="Bold" FontFamily="Roboto" FontSize="12"/>
                            <TextBlock Text="{Binding Version}" FontSize="12" FontWeight="Bold" FontFamily="Roboto" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#60676C" Margin="5,0,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Row="0" VerticalAlignment="Center" >
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Название и логотип" FontSize="17"  FontWeight="Bold" FontFamily="Roboto" VerticalAlignment="Center" Margin="7,0,0,0" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
    
</controls:MetroWindow>
